# ==============================================
# NALM GO Backend - Configurações de Ambiente
# ==============================================

# Aplicação
APP_NAME=NALM GO Backend
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# CORS - Origens permitidas (separadas por vírgula)
# Em produção, adicione o domínio do frontend
CORS_ORIGIN=https://nalm-go-frontend.onrender.com,http://localhost:5173
CORS_CREDENTIALS=true

# Banco de Dados PostgreSQL
# Use DATABASE_PUBLIC_URL para Render (inclui SSL automaticamente)
DATABASE_PUBLIC_URL=postgresql://usuario:senha@host:porta/database

# Ou configure manualmente:
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nalm_go_db
# DB_USER=postgres
# DB_PASSWORD=sua_senha
# DB_POOL_MAX=20
# DB_POOL_IDLE_TIMEOUT=30000
# DB_POOL_CONNECTION_TIMEOUT=2000

# Segurança
JWT_SECRET=sua_chave_secreta_super_segura_aqui
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# Uploads
UPLOAD_MAX_SIZE=10485760
UPLOAD_DESTINATION=uploads/
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Negócio
CONVITE_EXPIRE_HOURS=24

# Debug (apenas desenvolvimento)
DEBUG_QUERIES=false
