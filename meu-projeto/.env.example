# Aplicação
NODE_ENV=development
APP_NAME="NALM GO Backend"
PORT=3000
HOST=0.0.0.0
DEBUG_QUERIES=true

# Banco de Dados - Produção (Railway/Heroku)
DATABASE_PUBLIC_URL=postgresql://user:password@host:port/database

# Banco de Dados - Desenvolvimento
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=nalm_go_db
DB_USER=postgres
DB_PASSWORD=password

# Pool de Conexões
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=2000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# Upload de Arquivos
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/gif,application/pdf
UPLOAD_DESTINATION=uploads/

# Segurança
BCRYPT_ROUNDS=10
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Negócio
CONVITE_EXPIRE_HOURS=24

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined